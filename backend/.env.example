# Smart BI Platform Environment Configuration

# Application Settings
APP_NAME="Smart BI Platform"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# Server Configuration  
HOST="0.0.0.0"
PORT=8000

# Security Settings (CHANGE IN PRODUCTION!)
SECRET_KEY="your-super-secret-key-change-this-in-production-make-it-at-least-32-characters-long"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_HOSTS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000"

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/smart_bi"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR="uploads"

# AI/ML API Keys
GROQ_API_KEY=""
OPENAI_API_KEY=""
LANGCHAIN_API_KEY=""
LANGCHAIN_TRACING_V2=false

# Email Configuration (for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_TLS=true
EMAIL_FROM="noreply@smartbi.com"

# Monitoring and Logging
SENTRY_DSN=""
LOG_LEVEL="INFO"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Development Settings
# Set to false in production
DOCS_ENABLED=true
REDOC_ENABLED=true